<plugin>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.vclipse.fileTranformation"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               class="org.vclipse.vcml2idoc.injection.ExecutableExtensionFactory:org.vclipse.vcml2idoc.actions.VCML2IDocsAction"
               enablesFor="+"
               icon="icons/run_transformation.png"
               id="org.vclipse.actions.VCML2idoc"
               label="VClipse: VCML to IDoc"
               menubarPath="org.vclipse.vcml.ui.popupMenu.resource/content"
               tooltip="Create IDocs from existing SAP model.">
            <enablement>
               <and>
                  <objectClass
                        name="org.eclipse.core.resources.IFile">
                  </objectClass>
                  <objectState
                        name="extension"
                        value="vcml">
                  </objectState>
               </and>
            </enablement>
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.vclipse.popup.VCMLnature"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="org.vclipse.vcml2idoc.actions.AddRemoveNatureAction"
               enablesFor="+"
               id="org.vclipse.actions.addvcmlnature"
               label="Add/Remove VCML nature"
               menubarPath="org.vclipse.vcml.ui.popupMenu.resource/content">
            <enablement>
               <objectClass
                     name="org.eclipse.core.resources.IProject">
               </objectClass>
            </enablement>
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.vclipse.preferences.page"
            class="org.vclipse.vcml2idoc.injection.ExecutableExtensionFactory:org.vclipse.vcml2idoc.preferences.VCML2IDocOptionsPreferencePage"
            id="org.vclipse.vcml2idoc.preferences.pages.vcml2IDocOptions"
            name="IDoc Generation">
      </page>
   </extension>
   <extension
         id="org.vclipse.builder.vcml2idoc"
         name="VCML to IDoc Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true"
            isConfigurable="true">
         <run
               class="org.vclipse.vcml2idoc.builder.VCML2IDocBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="org.vclipse.natures.vcml2idoc"
         name="VCML to IDoc nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.vclipse.vcml2idoc.builder.VCML2IDocNature">
         </run>
      </runtime>
      <builder
            id="org.vclipse.builder.vcml2idoc">
      </builder>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.vclipse.vcml2idoc.injection.ExecutableExtensionFactory:org.vclipse.vcml2idoc.preferences.PreferencesInitializer">
      </initializer>
   </extension>
   
</plugin>
