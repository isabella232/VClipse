import "pc.cml2"

session Notebook [document "Notebook tests"]

testgroup Netbook1 {
	piproduct Notebook {
		Type = netbook
		consistent
		Dimensions = '14'
		conflict
	}
}

testgroup Netbook2 [mode failure]{
	piproduct Notebook {
		Type = netbook
		check Dimensions = '14'
	}
}

testgroup Netbook3 {
	piproduct Notebook {
		Type = netbook
		check default Dimensions = '17'
		checkDomain strict Cores {
			1 2 no 4
		}
	 	bom {
	 		#CPU1GHz = 1
	 		#Windows7Home = 1
	 		#HDD60GB = 1
	 	} 		
	}
}

testgroup MultimediaNotebook {
	piproduct Notebook {
		Type = multimedia
		check default Dimensions = '17'
		consistent
		check Cores = 1
		conflict
		
	}
}

testgroup DevelopementNotebook1 {
	piproduct Notebook {
		Type = development
		Dimensions = '14'
		check default Cores = 2
		Memory = 5
		Webcam = true
		UMTS = true
		bom {
			#CPU2x2GHz = 1
			#Display14G = 1
			#RAM4GB = 1
			#RAM1GB = 1
			#HDD120GB = 1
			#Webcam2M = 1
			#UMTSModule = 0
		}
	}
}

testgroup DevelopementNotebook2 {
	piproduct Notebook {
		Type = development
		checkDomain Dimensions {
			'12' '14' '15.4' '17'
		}
		check default HDD = '120'
		Memory = 4
		Display = glare
		check Cores = 2
		complete
		bom {
			#Windows7Professional = 1
			#CPU2x2GHz = 1
			#RAM4GB = 1
		}
	}
}

testgroup BusinessNotebook1 {
	piproduct Notebook {
		Type = business
		Display = 'non-glare'
		Dimensions = '17'
		conflict
	}
}

testgroup BusinessNotebook2 {
	piproduct Notebook {
		Type = business
		check Webcam invisible
	}
}