<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.vclipse.actions.diff"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               class="org.vclipse.vcml.diff.ui.ExportDiffsAction"
               enablesFor="+"
               icon="icons/compare.png"
               id="org.vclipse.actions.VCML2idoc"
               label="Create delta of VCML files"
               menubarPath="org.vclipse.vcml.ui.popupMenu.resource/content"
               tooltip="Compare 2 VCML files and create a delta VCML file of their differences">
            <enablement>
               <and>
                  <objectClass
                        name="org.eclipse.core.resources.IFile">
                  </objectClass>
                  <objectState
                        name="extension"
                        value="vcml">
                  </objectState>
               </and>
            </enablement>
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.vclipse.vcml.diff.ui.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.vclipse.preferences.page"
            class="org.vclipse.vcml.diff.ui.DiffPreferencePage"
            id="org.vclipse.vcml.preferencesPages.diff"
            name="VCML Diff">
      </page>
   </extension>
   <extension
         point="org.eclipse.emf.compare.match.engine">
      <matchengine
            engineClass="org.vclipse.vcml.diff.VcmlMatchEngine"
            fileExtension="vcml"
            label="VCML Match Engine"
            priority="highest">
      </matchengine>
   </extension>

</plugin>
