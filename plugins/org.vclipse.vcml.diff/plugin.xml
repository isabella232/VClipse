<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.vclipse.vcml.diff.injection.ExtensionFactory:org.vclipse.vcml.diff.ui.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.vclipse.preferences.pages.vclipse"
            class="org.vclipse.vcml.diff.injection.ExtensionFactory:org.vclipse.vcml.diff.ui.DiffPreferencePage"
            id="org.vclipse.vcml.preferencesPages.diff"
            name="VCML Diff">
      </page>
   </extension>
   <extension
         point="org.eclipse.emf.compare.match.engine">
      <matchengine
            engineClass="org.vclipse.vcml.diff.engines.VcmlMatchEngine"
            fileExtension="vcml"
            label="VCML Match Engine"
            priority="highest">
      </matchengine>
   </extension>
   <extension
         point="org.eclipse.emf.compare.diff.engine">
      <diffengine
            engineClass="org.vclipse.vcml.diff.injection.ExtensionFactory:org.vclipse.vcml.diff.compare.VcmlDiffEngine"
            label="Vcml Diff Engine for Source Files"
            priority="low">
      </diffengine>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.vclipse.ui.menus.popup?after=additions">
         <command
               commandId="org.vclipse.commands.exportDiffs"
               icon="icons/compare.png"
               label="Create delta of VCML files"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="org.vclipse.vcml.resources.files.vcml">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.vclipse.vcml.diff.injection.ExtensionFactory:org.vclipse.vcml.diff.ui.ExportDifferencesHandler"
            commandId="org.vclipse.commands.exportDiffs">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.vclipse.ui.commands"
            defaultHandler="org.vclipse.vcml.diff.injection.ExtensionFactory:org.vclipse.vcml.diff.ui.ExportDifferencesHandler"
            id="org.vclipse.commands.exportDiffs"
            name="Create delta of VCML files">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.vclipse.commands.exportDiffs"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+Shift+T">
      </key>
   </extension>

</plugin>
