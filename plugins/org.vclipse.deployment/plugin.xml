<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.vclipse.deployment.vcml2idocSend"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               class="org.vclipse.sap.deployment.injection.ExtensionFactory:org.vclipse.sap.deployment.ConvertSendAction"
               id="org.vclipse.actions.convertToIDocsAndSend"
               label="Send as IDocs to SAP system"
               menubarPath="org.vclipse.vcml.ui.popupMenu.resource/deployment">
	         <enablement>
	            <and>
	               <objectClass
	                     name="org.eclipse.core.resources.IFile">
	               </objectClass>
	               <objectState
	                     name="extension"
	                     value="vcml">
	               </objectState>
	            </and>
	         </enablement>
         </action>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="org.vclipse.deployment.diff"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               class="org.vclipse.sap.deployment.injection.ExtensionFactory:org.vclipse.sap.deployment.DeltaDeploymentAction"
               id="org.vclipse.deployment.diff"
               label="Deploy differences to SAP system"
               menubarPath="org.vclipse.vcml.ui.popupMenu.resource/deployment">
            <enablement>
               <and>
                  <objectClass
                        name="org.eclipse.core.resources.IFile">
                  </objectClass>
                  <objectState
                        name="extension"
                        value="vcml">
                  </objectState>
               </and>
            </enablement>
         </action>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="org.vclipse.deployment.idocSend"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               class="org.vclipse.sap.deployment.injection.ExtensionFactory:org.vclipse.sap.deployment.ConvertSendAction"
               id="org.vclipse.deployment.sendIdocs"
               label="Send idocs to SAP system"
               menubarPath="org.vclipse.vcml.ui.popupMenu.resource/deployment">
            <enablement>
               <and>
                  <objectClass
                        name="org.eclipse.core.resources.IFile">
                  </objectClass>
                  <objectState
                        name="extension"
                        value="idoc">
                  </objectState>
               </and>
            </enablement>
         </action>
      </objectContribution>
   </extension>
 <extension
       point="org.eclipse.core.runtime.preferences">
    <initializer
          class="org.vclipse.sap.deployment.injection.ExtensionFactory:org.vclipse.sap.deployment.preferences.PreferencesInitializer">
    </initializer>
 </extension>
 <extension
       point="org.eclipse.ui.preferencePages">
    <page
          category="org.vclipse.preferences.page"
          class="org.vclipse.sap.deployment.injection.ExtensionFactory:org.vclipse.sap.deployment.preferences.DeploymentPreferencePage"
          id="org.vclipse.deployment.preferencePage"
          name="SAP Deployment">
    </page>
 </extension>
</plugin>
