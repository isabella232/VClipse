module org.vclipse.vcml.mm.GenerateVcmlMM

import org.eclipse.emf.mwe.utils.*
import org.eclipse.xtext.generator.*
import org.eclipse.xtext.ui.generator.*

var projectName = "org.vclipse.vcml.mm"
var platformPrefix = "platform:/resource/${projectName}/src"
var projectPrefix = "../${projectName}"

Workflow {
	 
	bean = StandaloneSetup {
		scanClassPath = true
		platformUri = "${projectPrefix}/.."
		registerGenModelFile = "${platformPrefix}/org/vclipse/vcml/mm/VCML.genmodel"
	}
	
	component = DirectoryCleaner {
		directory = "emf-gen"
	}
	
	component = org.eclipse.emf.mwe2.ecore.EcoreGenerator {
		genModel = "${platformPrefix}/org/vclipse/vcml/mm/VCML.genmodel"
		srcPath = "${platformPrefix}"
	}
}
